{
  "name": "csl-js",
  "version": "0.0.1",
  "description": "Lightweight CSL Engine",
  "main": "lib/index.js",
  "author": "Lars Willighagen",
  "license": "MIT",
  "keywords": [
    "citation",
    "csl",
    "citeproc"
  ],
  "dependencies": {
    "html-entities": "^1.2.1",
    "regenerator-runtime": "^0.13.2",
    "xml-parser": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "babel-eslint": "^10.0.2",
    "babel-plugin-istanbul": "^5.1.4",
    "babelify": "^10.0.0",
    "browserify": "^16.3.0",
    "jsdoc": "^3.6.2",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "standard": "^12.0.1",
    "uglify-es": "^3.3.9"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "logger"
    ]
  },
  "browser": {
    "./src/logger.js": "./src/logger-browser.js"
  },
  "scripts": {
    "lint": "standard",
    "coverage": "npm run coverage:test && npm run coverage:report",
    "coverage:test": "NODE_ENV=test nyc npm test",
    "coverage:report": "nyc report --reporter=lcov > coverage.lcov",
    "compile": "babel src -d lib --copy-files",
    "dist": "npm run dist:files && npm run dist:docs",
    "dist:files": "npm run dist:regular && npm run dist:minify",
    "dist:regular": "browserify -r ./src/index.js:csl-js -o build/csl.js -g [ babelify ]",
    "dist:minify": "uglifyjs build/csl.js --ie8 -c -o build/csl.min.js",
    "dist:docs": "jsdoc ./src README.md -c .jsdoc.json"
  }
}
