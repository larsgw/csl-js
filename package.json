{
  "name": "csl-js",
  "version": "0.0.1",
  "description": "Lightweight CSL Engine",
  "main": "lib/index.js",
  "author": "Lars Willighagen",
  "license": "MIT",
  "keywords": [
    "citation",
    "csl",
    "citeproc"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.31",
    "colors": "^1.1.2",
    "html-entities": "^1.2.1",
    "xml-parser": "^1.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.31",
    "@babel/core": "^7.0.0-beta.31",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.31",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.31",
    "@babel/plugin-proposal-do-expressions": "^7.0.0-beta.32",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.31",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0-beta.31",
    "@babel/preset-env": "^7.0.0-beta.31",
    "@babel/register": "^7.0.0-beta.31",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babelify": "^7.3.0",
    "browserify": "^14.4.0",
    "cross-env": "^5.0.5",
    "expect.js": "^0.3.1",
    "jsdoc": "^3.5.5",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.2.1",
    "standard": "^10.0.3",
    "uglify-es": "^3.1.3"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "logger"
    ]
  },
  "browser": {
    "./src/logger.js": "./src/logger-browser.js"
  },
  "scripts": {
    "--1--": "lint",
    "lint:src": "standard \"src/**/*.js\"",
    "lint:test": "standard \"test/**/*.js\"",
    "lint": "npm-run-all lint:*",
    "--2--": "test",
    "coverage:test": "cross-env NODE_ENV=test nyc npm test",
    "coverage:report": "nyc report --reporter=lcov > coverage.lcov",
    "coverage": "npm-run-all coverage:*",
    "--3--": "compile",
    "compile": "babel src -d lib --copy-files",
    "--4--": "distributions",
    "dist:regular": "browserify -r ./src/index.js:csl-js -o build/csl.js -g [ babelify ]",
    "dist:minify": "uglifyjs build/csl.js --ie8 -c -o build/csl.min.js",
    "--5--": "generate",
    "generate:files": "npm-run-all dist:*",
    "generate:docs": "jsdoc ./src README.md -c .jsdoc.json",
    "generate": "npm-run-all generate:*"
  }
}
